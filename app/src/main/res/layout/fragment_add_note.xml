<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.scotshouse.mininote.AddNoteActivityFragment">

    <AutoCompleteTextView
        android:id="@+id/date_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/add_note_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_note_title_prompt"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/add_note_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_note_title_label"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/add_note_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_note_note_prompt"
        android:layout_below="@id/add_note_title"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/add_note_note"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_note_prompt"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/add_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_note"
        android:onClick="saveNoteToDb"
        />

</RelativeLayout>
